<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Button Content="ОК" HorizontalAlignment="Left" Margin="203,200,0,0" VerticalAlignment="Top" Width="101" Click="Button_Click"/>
        <Button Content="Выход" HorizontalAlignment="Left" Margin="368,200,0,0" VerticalAlignment="Top" Width="145" Click="Button_Click_1"/>
        <TextBox x:Name="passOld" HorizontalAlignment="Left" Height="23" Margin="203,116,0,0" TextWrapping="Wrap" Text="Старый пароль" VerticalAlignment="Top" Width="101" MouseEnter="PassOld_MouseEnter" MouseLeave="PassOld_MouseLeave" IsReadOnly="True"  />
        <TextBox x:Name="passNew" HorizontalAlignment="Left" Height="23" Margin="368,116,0,0" TextWrapping="Wrap" Text="Новый пароль" VerticalAlignment="Top" Width="145" TextChanged="TextBox_TextChanged" MouseEnter="PassNew_MouseEnter" MouseLeave="PassNew_MouseLeave" />

    </Grid>
</Window>
